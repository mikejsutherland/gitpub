<IfModule mod_rewrite.c>
    SetEnv HTTP_MOD_REWRITE On

    RewriteEngine on
    RewriteRule ^docs/(.+) - [L,NC]
    RewriteRule ^r/ - [L,NC]
    #RewriteRule ^u/ - [L,NC]
    RewriteRule ^([^\/]+)/([^\/]+)/(.+)/$ ?repo=$1&nav=$2&branch=$3 [QSA,L]
    RewriteRule ^([^\/]+)/([^\/]+)/$ ?repo=$1&nav=$2 [QSA,L]
    RewriteRule ^([^\/]+)/$ ?repo=$1 [QSA,L]
</IfModule>
